{
  "compilerOptions": {
    "target": "es6",                // Compila a ECMAScript 6
    "module": "commonjs",           // Usa commonjs para módulos
    "outDir": "./dist",             // Directorio de salida para los archivos compilados
    "rootDir": "./src",             // Directorio raíz de todos los archivos TypeScript
    "strict": true,                 // Habilita todas las opciones estrictas
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"                      // Incluye todos los archivos en el directorio 'src' y subdirectorios
  ]
}
